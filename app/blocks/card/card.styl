.card
	display block
	width 322px
	background #FAFAFA
	border-radius 2px
	box-shadow 0 2px 1px #B9B9B9

	&__header
		padding 15px
		&-img 
			float left
			border-radius 50%
			overflow hidden
			margin-right 8px
			.img
				size(48px)
		&-title
			font-size 24px
			margin 0 0 5px
		&-subtitle
			font-size 17px
			color #777
	&__p
		padding 28px 15px
		font-size 14px
	&__footer
		padding 15px
		border-top 1px solid #E9E9E9
		
			